<UserControl x:Class="EntityFrameworkApp.Views.Detail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel Grid.Row="0" Margin="10,45,0,0">
            <Label Content="{Binding Title}" Width="200" Margin="5" HorizontalAlignment="Left"></Label>
            <Label Content="{Binding Author}" Width="200" Margin="5" HorizontalAlignment="Left"></Label>
        </StackPanel>
    </Grid>
</UserControl>
